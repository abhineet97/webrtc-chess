{
  "name": "webrtc-chess",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "chess.js": "^0.10.2",
    "simple-peer": "^9.1.2"
  },
  "scripts": {
    "prebuild": "npm run lint",
    "build": "webpack -p",
    "lint": "eslint --fix app/*.js",
    "predeploy": "npm run build",
    "deploy": "now && now alias"
  },
  "devDependencies": {
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^3.0.0",
    "eslint": "^4.2.0",
    "html-minifier": "^3.5.2",
    "html-webpack-plugin": "^3.2.0",
    "inline-source-cli": "^1.2.0",
    "mini-css-extract-plugin": "^0.7.0",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.3.0",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.5"
  },
  "now": {
    "files": [
      "dist",
      "server"
    ],
    "type": "docker",
    "public": true,
    "alias": "chess.abhineet.tk"
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "indent": [
        "error",
        4
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-console": [
        "warn"
      ]
    },
    "globals": {
      "Peer": true,
      "Chess": true
    }
  },
  "optionalDependencies": {
    "now": "^11.2.9"
  }
}
