{
  "name": "webrtc-chess",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "chess.js": "^0.10.2",
    "simple-peer": "^9.1.2"
  },
  "scripts": {
    "build": "inline-source --compress --root app app/index.html | html-minifier --html5 --collapse-whitespace --remove-attribute-quotes --collapse-boolean-attributes --remove-comments --remove-redundant-attributes --remove-empty-attributes --remove-optional-tags -o dist/index.html",
    "lint": "eslint --fix app/*.js"
  },
  "devDependencies": {
    "eslint": "^4.2.0",
    "html-minifier": "^3.5.2",
    "inline-source-cli": "^1.2.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "indent": [
        "error",
        4
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-console": [
        "warn"
      ]
    },
    "globals": {
      "Peer": true,
      "Chess": true
    }
  }
}
